<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- sus trebuie sa fie: android:layout_height="wrap_content" -->
    <!-- https://stackoverflow.com/questions/35817610/large-gap-forms-between-recyclerview-items-when-scrolling-down -->

    <!-- https://developer.android.com/reference/androidx/constraintlayout/widget/ConstraintLayout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1sp"
        android:background="@drawable/border_primarydark_medium_shape"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_margin="1sp"
            android:background="@drawable/border_primarydark_medium_shape"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvpmsoperatorname"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:layout_margin="1sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>

                <TextView
                    android:id="@+id/tvtimestampcreate"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvstylename"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvoperationcode"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/tvoperationname"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvqapiecespercheck"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:layout_margin="1sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>

                <TextView
                    android:id="@+id/tvqaacceptablelevelofdefects"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvwhichx_target"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:layout_margin="1sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>

                <TextView
                    android:id="@+id/tvqadailychecks"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_margin="1sp"
            android:background="@drawable/border_primarydark_medium_shape"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvqaoperatorname"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:layout_margin="1sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/tvtimestampactual"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvbundleordernumericid"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:layout_margin="1sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/tvcorderid"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvsize"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/tvcolour"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvactualdefectsfoundpieces"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"/>

                <TextView
                    android:id="@+id/tvactualdefectsfoundprocent"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvbalance"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center|start"
                    android:textSize="11sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1sp"
                android:layout_weight="0.2"
                android:background="@drawable/border_primarydark_thin_shape"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvwhichx_actual"
                    android:gravity="center|start"
                    android:textSize="14sp"
                    android:layout_margin="1sp"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>